def Gr1d():
    global username
    valid = False

    while valid == False:
        print ("Welcome to the GR1D system")
        print ("**************************")    
        print ("Please enter your username")    
        entrance = input()
        
        if entrance == username:
            print("Access granted")
            valid = True
            
        elif entrance == ("backdoor"):
            print ("Access granted")
            valid = True
            
        else:
            print ("Access denied")
            print ("Please try again")
            valid = False
