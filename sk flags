def france(): 
    frenchrectangle()
    bob.fillcolor("blue")
    bob.begin_fill()
    bob.forward(100)
    bob.left(90)
    bob.forward(150)
    bob.left(90)
    bob.forward(100)
    bob.left(90)
    bob.forward(150)
    bob.end_fill()
    bob.penup()
    bob.left(90)   ###
    bob.forward(200)
    bob.left(90)
    bob.pendown()
    bob.forward(150)
    bob.right(90)
    bob.fillcolor("red")
    bob.begin_fill()
    bob.forward(100)
    bob.right(90)
    bob.forward(150)
    bob.right(90)
    bob.forward(100)
    bob.right(90)
    bob.forward(150)
    bob.end_fill()


    

one = input("press '1' to see the menu")
if one == ("1"):
    print ("---------------------------")
    print ("Press 'a' for China")                #main menu not as a define function at the moment 
    print ("Press 'b' for Germany")
    print ("Press 'c' for Great Britain")
    print ("Press 'd' for France")
    print ("---------------------------")
    letter = input()
    if letter == ("a"):   #China
        wn = turtle.Screen()
        wn.bgcolor("white")
        bob = turtle.Turtle()
        bob.speed(0)
        bob.color("black")
        bob.width(5)
        china()
    elif letter == ("b"): #Germany
        wn = turtle.Screen()
        wn.bgcolor("white")
        bob = turtle.Turtle()
        bob.speed(0)
        bob.color("black")
        bob.width(5)
        germany()
    elif letter == ("c"):  #GB
        wn = turtle.Screen()
        wn.bgcolor("white")
        bob = turtle.Turtle()
        bob.speed(0)
        bob.color("black")
        bob.width(5)
        greatbritain()
    elif letter == ("d"):  #France
        wn = turtle.Screen()
        wn.bgcolor("white")
        bob = turtle.Turtle()
        bob.speed(0)
        bob.color("black")
        bob.width(5)
        france()
        






