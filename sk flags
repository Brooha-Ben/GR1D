import turtle
import time

#rectangle code for the writer only
def rectangle():
    for i in range(1):
        bob.forward(370)
        bob.left(90)
        bob.forward(310)
        bob.left(90)
        bob.forward(370)
        bob.left(90)
        bob.forward(310)

#small star code for the writer only
def star():
    for i in range(5):
        bob.fillcolor("yellow")
        bob.begin_fill()
        bob.forward(20)
        bob.right(144)
        bob.end_fill()

def frenchrectangle():
    for i in range(2):
        bob.forward(300)
        bob.left(90)
        bob.forward(150)
        bob.left(90)

#bigger star code for the writer only
def bigstar():
    for i in range(5):
        bob.fillcolor("yellow")
        bob.begin_fill()
        bob.forward(60)
        bob.right(144)
        bob.end_fill()  


def china():#China
    bob.fillcolor("Red")
    bob.begin_fill()#start filling
    bob.forward(400)
    bob.left(90)
    bob.forward(200)
    bob.left(90)
    bob.forward(400)
    bob.left(90)
    bob.forward(200)
    bob.end_fill()#stop filling
    bob.penup()
    bob.left(145) 
    bob.forward(200)
    bob.pendown()
    bob.color("yellow")
    bob.width(1)
    star()
    bob.penup()
    bob.right(100)
    bob.forward(25)
    bob.pendown()
    star()
    bob.penup()
    bob.right(45)
    bob.forward(40)
    bob.pendown()
    star()
    bob.penup()
    bob.right(90)
    bob.forward(85)
    bob.right(90)
    bob.forward(10)
    bob.pendown()
    bigstar() #bigger star 

    
def germany(): #Germany
    for i in range(1):
        bob.forward(400)
        bob.left(90)
        bob.forward(150)
        bob.left(90)
        bob.forward(400)
        bob.left(90)
        bob.forward(150)
        bob.left(180)
        bob.fillcolor("yellow")     #first rectangle
        bob.begin_fill()
        bob.forward(50)
        bob.right(90)
        bob.forward(400)
        bob.right(90)
        bob.forward(50)
        bob.right(90)
        bob.forward(400)
        bob.end_fill()
        bob.right(90)
        bob.forward(100)
        bob.fillcolor("red")         #second rectangle, placing it away from the first (in the middle)
        bob.begin_fill()
        bob.right(90)
        bob.forward(400)
        bob.right(90)
        bob.forward(50)
        bob.right(90)
        bob.forward(400)
        bob.end_fill()
        bob.right(90)
        bob.forward(100)
        bob.fillcolor("black")          #third rectangle ((100) paces away - at the top of the rectangle -) 
        bob.begin_fill()
        bob.right(90)
        bob.forward(400)
        bob.right(90)
        bob.forward(50)
        bob.right(90)
        bob.forward(400)
        bob.end_fill()
        bob.right(90)
        bob.forward(50)


