def rps():
   import random

   import time
   
   
   rndchoice = ["Rock","Paper","Scissors"]

   computer = random.choice(rndchoice)    
    

   print ("Please choose Rock(Rock), Paper (Paper) or Scissors(Scissors)")
   user = input()

    if user == (computer):
        time.sleep(2)
        print ("The User chose", user," and the computer chose", computer)
        
        
        print ("That round was a Draw!")
        print (" ")
        time.sleep(1)
        
        print("Would you like to play again? y/n")
        again = input()
        if again == "y":
          rps()
        else:
          print("Goodbye")

